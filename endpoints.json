{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles with number of comments",
    "queries": [],
    "exampleResponse": {
      "articles": [
        {
          "author": "weegembump",
          "title": "Seafood substitutions are increasing",
          "article_id": 1,
          "topic": "cooking",
          "created_at": "2018-05-30T15:59:13.341Z",
          "article_img_url": "https://images.pexels.com.....",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an article object with article_id endpoint",
    "queries": ["article_id"],
    "exampleResponse": {
      "article": {
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "comment_count": 6
      }
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "adds to comments table and serves and respones with the posted comment object",
    "queries": [],
    "exampleResponse": {
      "comment": {
        "comment_id": "1",
        "body": "comment.....",
        "article_id": "1",
        "author": "weegembump",
        "votes": 0,
        "created_at": "2018-05-30T15:59:13.341Z"
      }
    }
  }
}